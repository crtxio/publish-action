{
  "name": "@crtxio/bases",
  "version": "0.0.1",
  "author": "Josh Robinson <josh@bproto.io>",
  "license": "MIT",
  "packageManager": "yarn@3.2.1",
  "type": "module",
  "files": [
    "dist",
    "package.json"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "dist",
        "dist/*"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./base2": {
      "import": "./dist/base2.mjs",
      "require": "./dist/base2.cjs"
    },
    "./base8": {
      "import": "./dist/base8.mjs",
      "require": "./dist/base8.cjs"
    },
    "./base10": {
      "import": "./dist/base10.mjs",
      "require": "./dist/base10.cjs"
    },
    "./base16": {
      "import": "./dist/base16.mjs",
      "require": "./dist/base16.cjs"
    },
    "./base32": {
      "import": "./dist/base32.mjs",
      "require": "./dist/base32.cjs"
    },
    "./base36": {
      "import": "./dist/base36.mjs",
      "require": "./dist/base36.cjs"
    },
    "./base58": {
      "import": "./dist/base58.mjs",
      "require": "./dist/base58.cjs"
    },
    "./base64": {
      "import": "./dist/base64.mjs",
      "require": "./dist/base64.cjs"
    }
  },
  "scripts": {
    "test": "mocha",
    "lint": "eslint .",
    "build": "unbuild",
    "format": "prettier --write \"**/*.+(ts)\""
  },
  "unbuild": {
    "rootDir": ".",
    "entries": [
      "./src/index",
      "./src/basex",
      "./src/base2",
      "./src/base8",
      "./src/base10",
      "./src/base16",
      "./src/base32",
      "./src/base36",
      "./src/base58",
      "./src/base64",
      "./src/rfc4648",
      "./src/abstract"
    ],
    "declaration": true,
    "rollup": {
      "emitCJS": true,
      "inlineDependencies": true
    }
  },
  "mocha": {
    "require": "jiti/register",
    "extensions": [
      "ts"
    ],
    "spec": [
      "test/**/*.test.*"
    ],
    "watch-files": [
      "src",
      "test"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/eslint": "^8",
    "@types/mocha": "^9.1.1",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "chai": "^4.3.6",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "unbuild": "^0.7.4"
  }
}