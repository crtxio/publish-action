{
  "name": "@crtxio/utils",
  "version": "0.0.1",
  "author": "Josh Robinson <josh@bproto.io>",
  "license": "MIT",
  "packageManager": "yarn@3.2.1",
  "type": "module",
  "files": [
    "dist",
    "package.json"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "dist",
        "dist/*"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./hex": {
      "import": "./dist/hex.mjs",
      "require": "./dist/hex.cjs"
    },
    "./calc": {
      "import": "./dist/calc.mjs",
      "require": "./dist/calc.cjs"
    },
    "./varint": {
      "import": "./dist/varint.mjs",
      "require": "./dist/varint.cjs"
    }
  },
  "scripts": {
    "test": "mocha",
    "lint": "eslint .",
    "build": "unbuild",
    "format": "prettier --write \"**/*.+(ts)\""
  },
  "unbuild": {
    "rootDir": ".",
    "entries": [
      "./src/index",
      "./src/hex",
      "./src/calc",
      "./src/varint"
    ],
    "rollup": {
      "emitCJS": true
    },
    "declaration": true,
    "dts": {
      "respectExternal": true
    }
  },
  "mocha": {
    "require": "jiti/register",
    "extensions": [
      "ts"
    ],
    "spec": [
      "test/**/*.test.*"
    ],
    "watch-files": [
      "src",
      "test"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/eslint": "^8",
    "@types/mocha": "^9.1.1",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "chai": "^4.3.6",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "unbuild": "^0.7.4"
  }
}